<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.gcastro.checkboxesempio.MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Seleziona uno o piu elementi"
        tools:layout_constraintTop_creator="1"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="@+id/textView"
        android:layout_marginTop="52dp"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/textView">

        <CheckBox
            android:id="@+id/fldShop1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mouse" />

        <CheckBox
            android:id="@+id/fldShop2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cover iPhone" />

        <CheckBox
            android:id="@+id/fldShop3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tastiera Wireless" />

        <CheckBox
            android:id="@+id/fldShop4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Monitor 27''" />

        <CheckBox
            android:id="@+id/fldShop5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pulizia Interna Portatile Asus" />

        <CheckBox
            android:id="@+id/fldShop6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Folder Tucano 15''" />

        <EditText
            android:id="@+id/fldReport"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textMultiLine" />

        <Button
            android:id="@+id/btnAcquista"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="makeAcquista"
            android:text="Acqusita" />
    </LinearLayout>
</android.support.constraint.ConstraintLayout>
